package giris;
import java.util.Scanner;
public class manav {
    public static void main(String[] args) {
        Scanner sayi = new Scanner(System.in);
        double armut = 2.14;
        double armutkg,afiyat;
        double elma = 3.67;
        double elmakg,efiyat;
        double domates = 1.11;
        double domateskg,dfiyat;
        double muzkg,mfiyat;
        double muz = 0.95;
        double patlican=5.0;
        double patlicankg,pfiyat;
        double toplam;
        System.out.println("kaç kilo armut aldın: " );
        armutkg = sayi.nextDouble();
        afiyat=armut*armutkg;
        System.out.println("kaç kilo elma aldın: ");
        elmakg=sayi.nextDouble();
        efiyat=elma*elmakg;
        System.out.println("kaç kilo domates aldın: ");
        domateskg=sayi.nextDouble();
        dfiyat=domates*domateskg;
        System.out.println("kaç kilo muz aldın: ");
        muzkg=sayi.nextDouble();
        mfiyat=muz*muzkg;
        System.out.println("kaç kilo patlican aldın");
        patlicankg=sayi.nextDouble();
        pfiyat=patlican*patlicankg;
        toplam = afiyat+mfiyat+efiyat+pfiyat+dfiyat;
        System.out.println("Toplam Tutar: "+toplam);
    }
}
